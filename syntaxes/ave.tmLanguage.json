{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ave",
	"patterns": [
		{
			"include": "#operators"
		},
		{
			"include": "#rooms"
		},
		{
			"include": "#items"
		},
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ave",
				"match": "\\b(__GAMEOVER__|__WINNER__|__R__|__PYTHON__|__APP__|__WEB__|__BADGE__|__NUMBER__)\\b"
			}]
		},
		"operators": {
			"name": "storage.ave",
			"match": "(\\s|^)(\\@\\@|\\=\\=|\\*\\*|--)\\s"
		},
		"rooms": {
			"name": "variable.ave",
			"begin": "(#|\\=\\>)\\W+",
			"end": "$",
			"beginCaptures": {
				"0": { "name": "storage.ave" }
			  },
			"patterns": [
				{ "include": "#keywords" },
				{ "include": "#items" }
			]
		},
		"items": {
			"name": "meta.type.cast.expr",
			"begin": "(\\+|\\%|\\+|\\W\\?|\\?\\!|~)",
			"end": "$",
			"beginCaptures": {
				"0": { "name": "storage.ave" }
			  },
			"patterns": [
				{ "include": "#keywords" },
				{ "include": "#maths_operators" },
				{ "include": "#numbers" },
				{ "include": "#not" },
				{ "include": "#items" }
			]
		},
		"maths_operators": {
			"name": "entity.name.label",
			"match": "(\\<|\\=|\\>)"
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "\\b[0-9\\.]+\\b"
		},
		"not": {
			"name": "storage.ave",
			"match": "\\!"
		}
	},
	"scopeName": "source.ave"
}